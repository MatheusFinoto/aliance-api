{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "allowJs": true,
      "typeRoots": ["./node_modules/@types", "./src/@types"],
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": ".",
      "sourceMap": true,
      "outDir": "./dist",
      "strict": true,
      "removeComments": true,
      "lib": ["esnext", "dom"],
      "declaration": true,
      "strictPropertyInitialization": false,
      "rootDir": "./src",
      "incremental": false,
      "noEmit": false,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "paths": {
          // "@plugins/": ["./src/plugins/"],
          // "@config/": ["./src/config/"],
          // "@helper/": ["./src/helper/"],
          // "@libs/": ["./src/libs/"],
          // "@routes/": ["./src/routes/"],
          // "@modules/": ["./src/modules/"],
          // "@shared/": ["./src/shared/"],
          // "@utils/": ["./src/utils/"],
          "@providers/*": ["./src/shared/container/providers/*"]
      }
  },
  "include": ["./src/*/"],
  "exclude": ["node_modules", "dist", "test"]
}